---
import Layout from "../layouts/Layout.astro";
import { historias } from "../assets/historias.astro";
---

<Layout>
  <div>
    <a href={`${import.meta.env.BASE_URL}`} class="back-btn"> Volver </a>

    <header class="timeline-header">
      <h2 class="timeline-title">Mini galleria</h2>
      <p class="timeline-subtitle">Promesas y dibujos que se expandir√°n con el tiempo.</p>
    </header>

    <section class="timeline">
      {
        historias.map((item, index) => (
          <div class={`timeline-item ${index % 2 === 0 ? "left" : "right"}`}>
            <span class="timeline-dot" />

            <div class="content">
              <span class="date">{item.fecha}</span>
              <p>{item.texto}</p>
            </div>

            <div class="image">
              <img src={item.imagen} alt="Historia" loading="lazy" />
            </div>
          </div>
        ))
      }
    </section>
  </div>
</Layout>

<style is:global>
  .timeline {
    font-family:
      "Satoshi",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      sans-serif;
    max-width: 1100px;
    margin: auto;
    padding: 2rem 1rem;
    position: relative;
  }

  .timeline::before {
    content: "";
    position: absolute;
    top: 3.5rem;
    bottom: 0;
    left: 50%;
    width: 2px;
    background: linear-gradient(to bottom, transparent, #6b5cff 15%);
    transform: translateX(-50%);
  }

  .timeline-item {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-areas: "content image";
    gap: 2rem;
    margin-bottom: 4rem;
    align-items: center;
  }

  .timeline-dot {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 25px;
    height: 25px;
    background: #101316;
    border: 3px solid #6b5cff;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }

  .content {
    grid-area: content;
  }

  .content p {
    font-size: clamp(1.2rem, 4vw, 1.6rem);
    line-height: 1.3;
    font-weight: 500;
    font-variant-ligatures: none;
  }

  .image {
    grid-area: image;
  }

  .timeline-item.left .content {
    grid-column: 1;
    text-align: right;
  }
  .timeline-item.left .image {
    grid-column: 2;
  }

  .timeline-item.right .content {
    grid-column: 2;
    text-align: left;
  }
  .timeline-item.right .image {
    grid-column: 1;
  }

  .content {
    padding: 1.5rem;
  }

  .content .date {
    display: block;
    font-size: 0.85rem;
    color: #888;
    margin: 0;
    font-weight: 500;
  }

  .image img {
    width: 100%;
    max-width: 320px;
    border: 5px solid #61385b;
    padding: 5px;
    height: auto;
    border-radius: 12px;
    display: block;
    margin: 0 auto;
  }

  .timeline-header {
    max-width: 1100px;
    margin: 2rem auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0 1rem;
    text-align: center;
    font-family: "Satoshi", system-ui, sans-serif;
  }

  .timeline-title {
    font-size: clamp(2.2rem, 5vw, 3rem);
    font-weight: 900;
    color: white;
    margin: 0;
    letter-spacing: -1.5px;
  }

  .timeline-subtitle {
    margin-top: 0.75rem;
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    color: #9ca3af;
    font-weight: 500;
  }

  .back-btn {
    color: white;
    cursor: crosshair;
    font-family: "Satoshi", sans-serif;
    font-weight: 700;
    font-size: clamp(1rem, 1.2vw, 1.5rem);
    padding: 5px 15px;
    border: none;
    transition: all 0.3s ease;
    background: linear-gradient(to right, rgb(49 46 129), rgb(88 28 135), rgb(88 28 135));
    border-radius: 0.5rem;
    box-shadow:
      inset 0 1px 0 0 rgba(255, 255, 255, 0.2),
      0 2px 0 0 #312e81,
      0 4px 0 0 #1e1b4b,
      0 6px 0 0 #0f172a,
      0 8px 0 0 #020617,
      0 8px 16px 0 rgba(49, 46, 129, 0.5);
    overflow: hidden;
    text-decoration: none;
    position: fixed;
    top: 1.2rem;
    left: 1.2rem;
    z-index: 100;
  }

  .back-btn:hover {
    background: linear-gradient(135deg, #9b5de5, #ff63c3);
    text-shadow: 0 2px 5px rgba(255, 255, 255, 0.5);
    transform: translateY(4px);
    box-shadow:
      inset 0 1px 0 0 rgba(255, 255, 255, 0.2),
      0 1px 0 0 #312e81,
      0 2px 0 0 #1e1b4b,
      0 3px 0 0 #0f172a,
      0 4px 0 0 #020617,
      0 4px 8px 0 rgba(49, 46, 129, 0.5);
  }

  @media (max-width: 992px) {
    .timeline-item {
      grid-template-columns: 1fr;
      grid-template-areas:
        "content"
        "image";
      padding-left: 2rem;
    }
    .content {
      padding: 1rem 0;
    }

    .content p {
      text-align: left;
      word-break: normal;
      hyphens: auto;
    }

    .back-btn {
      bottom: 1rem;
      right: 50%;
      left: 50%;
      top: auto;
      padding: 0.45rem 0.9rem;
      font-size: 0.85rem;
      width: fit-content;
      transform: translate(-50%, 0%);
    }

    .timeline::before {
      left: 1rem;
    }

    .timeline-item {
      grid-template-columns: 1fr;
      padding-left: 2rem;
    }

    .timeline-item.left .content,
    .timeline-item.right .content,
    .timeline-item.left .image,
    .timeline-item.right .image {
      grid-column: 1;
      text-align: left;
    }

    .timeline-dot {
      left: 1rem;
      top: 1.5rem;
      transform: translate(-115%, 35%);
    }

    .image img {
      max-width: 80%;
    }

    .timeline-header {
      margin: 2rem auto;
    }
  }
</style>
